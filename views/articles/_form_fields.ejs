<div class='form-group'>
  <label for='title'>Title</label>
  <input required value="<%= article.title %>" type='text' id="title" name="title"></input>
</div>
<div class='form-group'>
  <label for='description'>Description</label>
  <textarea style="resize: none;" id="description" name="description" rows="4" cols="50"><%= article.description %></textarea>
</div>
<div class='form-group'>
  <label for='markdown'>Markdown</label>
  <textarea required style="resize: none;" id="markdown" name="markdown" rows="20" cols="50"><%= article.markdown %></textarea>
</div>
<div class='form-group'>
  <label for='image'>Image URL</label>
  <input required value="<%= article.image %>" type='text' id="image" name="image"></input>
</div>
<div class='btn'>
  <a href='/' class='btn-cancel'>Cancel</a>
  <button type='submit' class='btn-save'>Save</button>
</div>