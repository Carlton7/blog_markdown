<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/css/index.css" />
  <link rel="icon" href="https://cdn3.iconfinder.com/data/icons/education-232/48/Digital-Book-512.png">
  <title>The Article</title>
</head>
<body>
  <header>
    <nav class="navbar">
      <a class='logo'>The Article</a>
      <a href='/articles/new' class='new-article-btn'>New Article</a>
    </nav>
  </header>
  <div class='container'>
    <% articles.forEach( article => { %>
      <div class='card'>
        <div class='card-img' style="background-image: url('<%= article.image %>')">
          <div class='card-caption'>
            <div class='card-blur'>
              <h3 class='card-title'><%= article.title %></h3>
              <div class='card-date'><%= article.createdAt.toLocaleDateString() %></div>
              <div class='card-description'><%= article.description %></div>
              <div class='card-btn'>
                  <div id='card-slide'></div>
                  <a href='articles/<%= article.slug %>' class='card-btn-read-more'>Read More</a>
                  <a href='articles/edit/<%= article.id %>' class='card-btn-edit'>Edit</a>
                  <form action='/articles/<%= article.id %>?_method=DELETE' method="POST">
                    <button type='submit' class='btn-delete'>Delete</button>
                  </form>
              </div>
            </div>
          </div>  
        </div>
      </div>
    <% }) %>

  </div>
</body>
</html>